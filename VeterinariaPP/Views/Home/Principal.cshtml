@{ Layout = null;
    ViewBag.Title = "PawPatrol"; }
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Paw Patrol</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    <link href="img/favicon.ico" rel="icon">

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">


    @Styles.Render("~/Recursos/lib/flaticon/font/flaticon.css")
    @Styles.Render("~/Recursos/lib/owlcarousel/assets/owl.carousel.min.css")
    @Styles.Render("~/Recursos/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css")
    @Styles.Render("~/css/styles.css")
</head>

<body>

    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-green navbar-dark py-3 py-lg-0 px-lg-5">
            <a href="" class="navbar-brand d-block d-lg-none">
                <h1 class="m-0 display-5 text-capitalize font-italic text-white"><span></span>Veterinaria Paw Patrol</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-3" id="navbarCollapse">
                <div class="navbar-nav mr-auto py-0">
                    <a href="~/Home/Principal">
                        <img src="~/Imagenes/logo.png"
                             height="70">
                    </a>
                    <a href="~/Home/Principal" class="nav-item nav-link bg-green text-white">Inicio</a>
                    <a href="~/Home/Servicios" class="nav-item nav-link bg-green text-white">Servicios</a>
                    <a href="~/Home/Sucursales" class="nav-item nav-link bg-green text-white">Sucursales</a>
                    <a href="http://telegram.me/Televeterinaria_bot" class="nav-item nav-link bg-green text-white">Ayuda en Linea</a>

                </div>
                <a href="~/Acceso/LoginUsuario" class="btn btn-lg btn-primary px-3 d-none d-lg-block bg-light text-dark">Iniciar Sesion</a>
            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    <!-- Carousel Start -->
    <div class="container-fluid p-0">
        <div id="header-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/Imagenes/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h3 class="text-white mb-3 d-none d-sm-block">Los mejores servicios para tu mascota</h3>
                            <h1 class="display-3 text-white mb-3">Los mejores cuidados y tratamientos para su mascota</h1>
                            <h5 class="text-white mb-3 d-none d-sm-block">Cuida a tu mascota hoy disfruta mañana</h5>
                            <a href="~/Acceso/LoginUsuario" class="btn btn-lg btn-primary mt-3 mt-md-4 px-4">Reservar cita</a>
                            <a href="~/Home/Servicios" class="btn btn-lg btn-secondary mt-3 mt-md-4 px-4">Leer Mas</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/Imagenes/carousel-2.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h3 class="text-white mb-3 d-none d-sm-block">Los mejores servicios para tu mascota</h3>
                            <h1 class="display-3 text-white mb-3">Manten feliz a su mascota</h1>
                            <h5 class="text-white mb-3 d-none d-sm-block">Su confort es nuestra felicidad</h5>
                            <a href="~/Home/Servicios" class="btn btn-lg btn-primary mt-3 mt-md-4 px-4">Leer Mas</a>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                <div class="btn btn-primary rounded" style="width: 45px; height: 45px;">
                    <span class="carousel-control-prev-icon mb-n2"></span>
                </div>
            </a>
            <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                <div class="btn btn-primary rounded" style="width: 45px; height: 45px;">
                    <span class="carousel-control-next-icon mb-n2"></span>
                </div>
            </a>
        </div>
    </div>
    <!-- Carousel End -->

    <footer>
        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white mt-0 py-3 px-sm-3 px-md-5">
            <div class="row pt-3">
                <div class="col-lg-6 col-md-12 mb-3">
                    <h1 class="mb-3 display-5 text-capitalize text-white"><span class="text-primary">Veterinaria </span> Paw Patrol</h1>
                    <h3 class="mb-3 display-5 text-capitalize text-primary">Mision</h3>
                    <p class="m-0">Brindar informacion y servicios de calidad para el cuidado y bienestar de las mascotas, fomentando la comunicacion efectiva con los propietarios.</p>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <h3 class="mb-3 display-5 text-capitalize text-primary">Vision</h3>
                            <p class="m-0">Ser la referencia en linea para los amantes de los animales ofreciendo una experiencia interactiva y servicios veterinarios confiables, contribuyendo al bienestar de las mascotas y la comunidad en general.</p>
                        </div>
                        <div class="col-md-4 mb-3">

                            <h5 class="text-primary mb-4">Enlaces</h5>
                            <div class="d-flex flex-column justify-content-start">
                                <a class="text-white mb-2" href="#"><i class="fa fa-angle-right mr-1"></i>Inicio</a>
                                <a class="text-white mb-2" href="#"><i class="fa fa-angle-right mr-1"></i>Acerca de</a>
                                <a class="text-white mb-2" href="#"><i class="fa fa-angle-right mr-1"></i>Servicios</a>
                                <a class="text-white mb-2" href="#"><i class="fa fa-angle-right mr-1"></i>Sucursales</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid text-white py-4 px-sm-3 px-md-5" style="background: #111111;">
            <div class="row pt-3 pb-3">
                <div class="col-md-8 text-center text-md-left mb-3 mb-md-0">
                    <p class="m-0 text-white">
                        &copy; <a class="text-white font-weight-bold" href="https://freewebsitecode.com">Veterinaria Paw Patrol</a>. Todos los derechos reservados. Diseñado por
                        <a class="text-white font-weight-bold" href="https://freewebsitecode.com">JJJ Evil Corporation</a>
                    </p>
                </div>
                <div class="col-md-4 text-center text-md-right">
                    <ul class="nav d-inline-flex">
                        <li class="nav-item">
                            <a class="nav-link text-white py-0" href="#">Privacidad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-0" href="#">Terminos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-0" href="#">FAQs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white py-0" href="#">Ayuda</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Footer End -->
        <!-- Back Btn -->
        <a href="#" class="btn btn-lg btn-primary back-to-top text-ligth "><i class="fa fa-angle-double-up"></i></a>


        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
        @Scripts.Render("~/Recursos/lib/js")
        @Scripts.Render("~/Recursos/mail/js")
        @Scripts.Render("~/Recursos/js/js")

        <!-- Template Javascript -->
        <script src="js/main.js"></script>
    </footer>
</body>

</html>